---
const gallery = [
    {
        title: "Project 2",
        image: "/projects/laistanbul1.webp",
        description: "Description of Project 2",
    },
    {
        title: "Project 1",
        image: "/projects/kulsalads1.webp",
        description: "Description of Project 1",
    },
    // Add more projects here...
];
---

<div class="py-8">
    <div
        class="relative mx-auto border-[#000000] bg-[#FFF5E1] border-[8px] rounded-t-xl h-[172px] max-w-[301px] md:h-[294px] md:max-w-[512px]"
    >
        <!-- Mockup Container -->
        <div
            class="relative rounded-lg overflow-hidden h-[156px] md:h-[278px] bg-white"
        >
            <!-- Swiper Slider -->
            <div class="swiper h-full w-full">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    {
                        gallery.map((project) => (
                            <div class="swiper-slide">
                                <img
                                    src={project.image}
                                    class="h-full w-full top-0 object-top"
                                    alt="Laptop Screen 1"
                                />
                            </div>
                        ))
                    }

                </div>
                <!-- If we need pagination -->
                <div class="swiper-pagination"></div>

                <!-- If we need navigation buttons -->
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>

                <!-- If we need scrollbar -->
                <!-- <div class="swiper-scrollbar"></div> -->
            </div>
        </div>
    </div>
    <div
        class="relative mx-auto bg-[#FFD700] rounded-b-xl rounded-t-sm h-[17px] max-w-[351px] md:h-[21px] md:max-w-[597px]"
    >
        <div
            class="absolute left-1/2 top-0 -translate-x-1/2 rounded-b-xl w-[56px] h-[5px] md:w-[96px] md:h-[8px] bg-[#D32F2F]"
        >
        </div>
    </div>
</div>

<script is:inline>
    const swiper = new Swiper(".swiper", {
        // Optional parameters
        direction: "horizontal",
        loop: true,

        // If we need pagination
        pagination: {
            el: ".swiper-pagination",
        },

        // Navigation arrows
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },

        // And if we need scrollbar
        scrollbar: {
            el: ".swiper-scrollbar",
        },
    });
</script>

<style is:inline>
    .swiper {
        width: 100%;
        height: 100%;
    }
    .swiper-slide img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image covers the slide area */
    }
    .swiper-navigation-color {
        background-color: bisque;
    }
    .swiper-button-next,
    .swiper-button-prev {
        color: #ffd700; /* Arrow color */
    }
    .swiper-pagination {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        justify-content: center;
        gap: 8px;
    }
    .swiper-pagination-bullet {
        background-color: #d32f2f; /* Bullet color */
        width: 12px;
        height: 12px;
        border-radius: 50%;
        opacity: 0.7;
    }
    .swiper-pagination-bullet-active {
        background-color: #ffd700; /* Active bullet color */
        opacity: 1;
    }
</style>
